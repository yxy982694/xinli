@import "./variable";
// 为6个模块添加圆角和背景色
.page-container
  // padding: 0 15px
  display: flex
  flex-direction: column
  justify-content: space-between
  overflow: hidden
  .el-row
    padding: 0 15px
.content-radius
  // border-radius: 4px
  background: #fff
  // padding: 0 5px 10px
  margin-top: 15px
  overflow: hidden
  box-shadow: 0 0 2px 2px #dfdfdf
  box-sizing: border-box
// 每个模块的标题部分
.section-title
    display: flex
    align-items: center
    justify-content: space-between
    padding: 15px 18px
    .section-title-name
      font-size: $font-size-medium-x
      color: $color-textblack
      font-weight: bold
    .section-title-click // 可点击的编辑或全部按钮
      cursor: pointer
      font-size: $font-size-small
      color: $color-textgray
// 快速通道和短信定制样式
// 为6个模块设置内容字体大小和颜色
.font-smallnum
   font-size: $font-size-small
   color: $color-gray
.main-tabs .el-tabs__content
    min-height: 120px
    width: 80px
    overflow: auto
    position: relative
    display: none
.tab-down-menu
    z-index: 3333
    background: #fff
    border-radius: 4px
    font-size: 12px
    box-shadow: 2px 2px 3px 0 rgba(0,0,0,.3)
    line-height: 15px
    p
      padding: 7px 16px
      cursor: pointer
// 滚动块的样式
.el-carousel__button
    background-color: $color-blue !important
    width: 10px !important
