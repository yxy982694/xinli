      // padding:0 8px
// header中logo样式
.header-left
   flex-basis: 530px
   // width: 530px !important
   display: flex
   align-items: center
   // justify-content: space-between
   padding-left: 20px
   background-color: #2152bb
   box-sizing: border-box
   h1
    height: 80px
    display: flex
    align-items: center
    margin-right: 10px
   h3
     color: #fff
     font-size: $font-size-large-x
     margin-left: 10px
     line-height: 25px
