     // line-height: 16px
.header-center
  position: absolute
  left: 500px
  right: 0
  height: 80px
  width: 60px
  z-index: 999999
  display: flex
  background-color: transparent
.header-center-bg1
  height: 100%
  background-color: #1a3c88
  flex: 1
  transform: skew(-30deg)
.header-center-bg2
  height: 100%
  background-color: #122555
  flex: 1
  transform: skew(-30deg)
.header-center-bg3
  height: 100%
  background-color: #0e1a3c
  flex: 1
  transform: skew(-30deg)
.header-right
  padding: 15px 20px 0 20px
  background-color: #0b1026
  box-sizing: border-box
  display: flex
  flex-direction: column
  justify-content: space-between
  align-items: flex-end
  flex: 1
.header-business
  display: flex
  padding-left: 40px
  font-size: $font-size-medium
  cursor: pointer
  .header-business-item
   padding: 0 25px
   .el-icon-bell
     position: relative
     &:after{
       content: ''
       display: inline-block
       width: 5px
       height: 5px
       border-radius: 50%
       background-color: #ec4070
       position: absolute
       right: 2px
       top: 2px
     }
.header-business-item+.header-business-item
  border-left: 1px solid #b9b9b9
  color: #717eb9
.header-business .header-business-item:last-child
  padding: 0 10px 0 18px
.user-name
  color: #4effde
@media screen and (max-width: 1200px)
 .header-left img
